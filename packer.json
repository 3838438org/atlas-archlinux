{
  "variables": {
    "archversion": null,
    "pathtoiso": null,
    "isochecksum": null,
    "isochecksumtype": null,
    "cpus": 2,
    "ramsize": 1024,
    "vramsize": 16,
    "disksize": 65536,
    "outdir": "boxes",
    "shutdowncmd": "sudo systemctl poweroff"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "guest_os_type": "ArchLinux_64",
      "output_directory": "{{user `outdir`}}/virtualbox",
      "guest_additions_mode": "disable",
      "iso_url": "{{user `pathtoiso`}}/{{user `archversion`}}/archlinux-{{user `archversion`}}-dual.iso",
      "vm_name": "archlinux-{{user `archversion`}}",
      "iso_checksum": "{{user `isochecksum`}}",
      "iso_checksum_type": "{{user `isochecksumtype`}}",
      "ssh_username": "root",
      "ssh_wait_timeout": "2m",
      "headless": true,
      "boot_wait": "5s",
      "boot_command": [
        "<enter><wait10><wait10>",
        "vi /etc/ssh/sshd_config <enter>",
        "<esc>/PermitRootLogin<enter><esc>^x",
        "<esc>/PermitEmptyPasswords<enter><esc>^x$xxayes<esc>",
        "<esc>:wq<enter>",
        "<wait>",
        "systemctl restart sshd.service<enter>"
      ],
      "shutdown_command": "{{user `shutdowncmd`}}",
      "shutdown_timeout": "2m",
      "disk_size": "{{user `disksize`}}",
      "hard_drive_interface": "sata",
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--vram", "{{user `vramsize`}}" ],
        [ "modifyvm", "{{.Name}}", "--memory", "{{user `ramsize`}}" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "{{user `cpus`}}" ],
        [ "modifyvm", "{{.Name}}", "--rtcuseutc", "on" ],
        [ "modifyvm", "{{.Name}}", "--usb", "on" ]
      ]
    },
    {
      "type": "parallels-iso",
      "guest_os_type": "linux-2.6",
      "output_directory": "{{user `outdir`}}/parallels",
      "parallels_tools_flavor": "lin",
      "iso_url": "{{user `pathtoiso`}}/{{user `archversion`}}/archlinux-{{user `archversion`}}-dual.iso",
      "vm_name": "archlinux-{{user `archversion`}}",
      "iso_checksum": "{{user `isochecksum`}}",
      "iso_checksum_type": "{{user `isochecksumtype`}}",
      "ssh_username": "root",
      "ssh_wait_timeout": "2m",
      "boot_wait": "5s",
      "boot_command": [
        "<enter><wait10><wait10>",
        "vi /etc/ssh/sshd_config <enter>",
        "<esc>/PermitRootLogin<enter><esc>^x",
        "<esc>/PermitEmptyPasswords<enter><esc>^x$xxayes<esc>",
        "<esc>:wq<enter>",
        "<wait>",
        "systemctl restart sshd.service<enter>"
      ],
      "shutdown_command": "{{user `shutdowncmd`}}",
      "shutdown_timeout": "2m",
      "disk_size": "{{user `disksize`}}",
      "hard_drive_interface": "sata",
      "prlctl": [
        [ "set", "{{.Name}}", "--videosize", "{{user `vramsize`}}" ],
        [ "set", "{{.Name}}", "--memsize", "{{user `ramsize`}}" ],
        [ "set", "{{.Name}}", "--cpus", "{{user `cpus`}}" ]
      ]
    },
    {
      "type": "vmware-iso",
      "guest_os_type": "other3xlinux-64",
      "output_directory": "{{user `outdir`}}/vmware",
      "iso_url": "{{user `pathtoiso`}}/{{user `archversion`}}/archlinux-{{user `archversion`}}-dual.iso",
      "vm_name": "archlinux-{{user `archversion`}}",
      "vmdk_name": "archlinux-{{user `archversion`}}",
      "iso_checksum": "{{user `isochecksum`}}",
      "iso_checksum_type": "{{user `isochecksumtype`}}",
      "ssh_username": "root",
      "ssh_wait_timeout": "2m",
      "headless": true,
      "boot_wait": "5s",
      "boot_command": [
        "<enter><wait10><wait10>",
        "vi /etc/ssh/sshd_config <enter>",
        "<esc>/PermitRootLogin<enter><esc>^x",
        "<esc>/PermitEmptyPasswords<enter><esc>^x$xxayes<esc>",
        "<esc>:wq<enter>",
        "<wait>",
        "systemctl restart sshd.service<enter>"
      ],
      "shutdown_command": "{{user `shutdowncmd`}}",
      "shutdown_timeout": "2m",
      "disk_size": "{{user `disksize`}}",
      "disk_type_id": 0,
      "vmx_data": {
        "memsize": "{{user `ramsize`}}",
        "numvcpus": "{{user `cpus`}}",
        "usb.present": "TRUE",
        "ehci.present": "TRUE",
        "usb.pcislotnumber": "-1",
        "ehci.pciSlotNumber": "0"
      }
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "support/shared",
      "destination": "/root/shared"
    },
    {
      "type": "shell",
      "script": "scripts/bootstrap.sh"
    },
    {
      "type": "file",
      "source": "support/virtualbox",
      "destination": "/root/virtualbox",
      "only": [ "virtualbox-iso" ]
    },
    {
      "type": "shell",
      "script": "scripts/virtualbox-bootstrap.sh",
      "only": [ "virtualbox-iso" ]
    },
    {
      "type": "file",
      "source": "support/parallels",
      "destination": "/root/parallels",
      "only": [ "parallels-iso" ]
    },
    {
      "type": "shell",
      "script": "scripts/parallels-bootstrap.sh",
      "only": [ "parallels-iso" ]
    },
    {
      "type": "file",
      "source": "support/vmware",
      "destination": "/root/vmware",
      "only": [ "vmware-iso" ]
    },
    {
      "type": "shell",
      "script": "scripts/vmware-bootstrap.sh",
      "only": [ "vmware-iso" ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "compression_level": 9,
      "output": "{{user `outdir`}}/archlinux-{{.Provider}}.box",
      "keep_input_artifact": false
    }
  ]
}
